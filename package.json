{
  "name": "styled-cva",
  "description": "A typesafe, class-variance-authority-based, styled-components-like library for authoring React components",
  "version": "0.2.3",
  "publishConfig": {
    "access": "public"
  },
  "license": "LicenseRef-LICENSE",
  "keywords": [
    "styled-components",
    "class-variance-authority",
    "react",
    "tailwindcss",
    "variants"
  ],
  "scripts": {
    "build": "pnpm compile && pnpm bundle",
    "compile": "tsc --noEmit",
    "bundle": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsup",
    "test": "vitest --run src",
    "clean": "rm -rf dist",
    "lint": "eslint ./src --ext .ts,.tsx"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/strictest": "^2.0.5",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "happy-dom": "^13.10.1",
    "matchers": "link:@testing-library/jest-dom/matchers",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.2",
    "ts-expect": "^1.3.0",
    "tsup": "^8.0.2",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0"
  }
}
