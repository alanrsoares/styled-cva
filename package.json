{
  "name": "styled-cva",
  "description": "A typesafe, class-variance-authority-based, styled-components-like library for authoring React components",
  "version": "0.1.2",
  "publishConfig": {
    "access": "public"
  },
  "license": "LicenseRef-LICENSE",
  "keywords": [
    "styled-components",
    "class-variance-authority",
    "react",
    "tailwindcss",
    "variants"
  ],
  "scripts": {
    "build": "pnpm compile && pnpm bundle",
    "compile": "tsc --noEmit",
    "bundle": "NODE_OPTIONS=\"--max-old-space-size=4096\" tsup",
    "test": "vitest --run src",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/strictest": "^2.0.3",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.2.1",
    "class-variance-authority": "^0.7.0",
    "eslint": "^8.57.0",
    "happy-dom": "^13.7.3",
    "matchers": "link:@testing-library/jest-dom/matchers",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.1",
    "tsup": "^8.0.2",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0"
  }
}
