{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.spec.tsx",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
